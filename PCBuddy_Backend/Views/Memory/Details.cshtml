@using PCBuddy_Backend.Utils
@model PCBuddy_Backend.Models.Memory
@{
    ViewData["Title"] = "Memory Details";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>@Model.Name</h2>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning"><i class="fas fa-edit"></i> Edit</a>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="row">
                <div class="col-md-4 text-center mb-4 mb-md-0">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                            <img src="@AIUtils.FormatImageUrl(Model.ImageUrl)" alt="@Model.Name" class="img-fluid rounded border p-2" style="max-height: 300px;" />
                    }
                    else
                    {

                        <div class="alert alert-secondary py-5">No Image Available</div>
                    }
                    
                    <div class="mt-3">
                        <h3 class="text-success">$@Model.Price</h3>
                        @if (!string.IsNullOrEmpty(Model.ProductUrl))
                        {
                                <a href="@Model.ProductUrl" target="_blank" class="btn btn-outline-primary btn-sm mt-2"><i class="fas fa-external-link-alt"></i> View Product</a>
                        }
                    </div>
                </div>
                <div class="col-md-8">
                    <h5 class="card-title border-bottom pb-2">Specifications</h5>
                    <dl class="row">
                        <dt class="col-sm-4">Manufacturer</dt> <dd class="col-sm-8">@Model.Manufacturer</dd>
                        <dt class="col-sm-4">Speed</dt> <dd class="col-sm-8">@Model.Speed</dd>
                        <dt class="col-sm-4">Modules</dt> <dd class="col-sm-8">@Model.Modules</dd>
                        <dt class="col-sm-4">Price / GB</dt> <dd class="col-sm-8">$@Model.PricePerGb</dd>
                        <dt class="col-sm-4">Color</dt> <dd class="col-sm-8">@Model.Color</dd>
                        <dt class="col-sm-4">First Word Latency</dt> <dd class="col-sm-8">@Model.FirstWordLatency ns</dd>
                        <dt class="col-sm-4">CAS Latency</dt> <dd class="col-sm-8">@Model.CasLatency</dd>
                        <dt class="col-sm-4">Voltage</dt> <dd class="col-sm-8">@Model.Voltage V</dd>
                        <dt class="col-sm-4">Updated At</dt> <dd class="col-sm-8">@Model.UpdatedAt.ToLocalTime()</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>