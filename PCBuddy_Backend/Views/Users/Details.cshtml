@using PCBuddy_Backend.Utils
@model PCBuddy_Backend.Models.User
@{
    ViewData["Title"] = "User Profile";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>User Profile</h2>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning"><i class="fas fa-user-cog"></i> Edit Permissions</a>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="card shadow-sm text-center p-4">
                <div class="mx-auto mb-3">
                    @if (!string.IsNullOrEmpty(Model.ProfilePicture))
                    {
                        <img src="@AIUtils.FormatImageUrl(Model.ProfilePicture)" class="rounded-circle shadow" style="width: 150px; height: 150px; object-fit: cover;" />
                    }
                    else
                    {
                        <div class="bg-secondary rounded-circle text-white d-flex justify-content-center align-items-center mx-auto shadow" style="width:150px; height:150px; font-size: 3rem;">
                            @Model.Username.Substring(0, 1).ToUpper()
                        </div>
                    }
                </div>
                <h3>@Model.Name</h3>
                <p class="text-muted">@@@Model.Username</p>
                <p>@Model.Email</p>

                <hr />

                <div class="text-start">
                    <p><strong>Role:</strong> @Model.Role</p>
                    <p><strong>Status:</strong> @(Model.Banned ? "Banned" : "Active")</p>
                    <p><strong>Joined:</strong> @Model.CreatedAt.ToLongDateString()</p>
                    <p><strong>Last Login:</strong> @(Model.LastLogin.HasValue? Model.LastLogin.Value.ToString() : "Never")</p>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Biography</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">@(string.IsNullOrEmpty(Model.Bio) ? "No bio provided." : Model.Bio)</p>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Saved PC Builds</h5>
                    <span class="badge bg-primary rounded-pill">@Model.PersonalPCs.Count</span>
                </div>
                <div class="card-body">
                    @if (Model.PersonalPCs.Any())
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var pc in Model.PersonalPCs)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span>
                                        <strong>ID #@pc.Id</strong>
                                    </span>
                                    <span class="text-success fw-bold">$@pc.TotalPrice</span>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted">This user hasn't saved any PC builds yet.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>