@using PCBuddy_Backend.Utils
@model PaginatedList<PCBuddy_Backend.Models.User>

@{
    ViewData["Title"] = "Manage Users";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Manage Users</h2>
</div>

<table class="table table-striped table-hover shadow-sm bg-white rounded">
    <thead class="table-dark">
        <tr>
            <th>Avatar</th>
            <th>Username</th>
            <th>Email</th>
            <th>Role</th>
            <th>Status</th>
            <th>Joined</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(item.ProfilePicture))
                    {
                        <img src="@AIUtils.FormatImageUrl(item.ProfilePicture)" class="rounded-circle" style="width: 40px; height: 40px; object-fit: cover;" />
                    }
                    else
                    {
                        <div class="bg-secondary rounded-circle text-white d-flex justify-content-center align-items-center" style="width:40px; height:40px;">
                            @item.Username.Substring(0, 1).ToUpper()
                        </div>
                    }
                </td>
                <td>@Html.DisplayFor(modelItem => item.Username)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>
                    @if (item.Role == PCBuddy_Backend.Models.Role.ADMIN)
                    {
                        <span class="badge bg-danger">ADMIN</span>
                    }
                    else
                    {

                        <span class="badge bg-primary">USER</span>
                    }
                </td>
                <td>
                    @if (item.Banned)
                    {
                        <span class="badge bg-dark">BANNED</span>
                    }
                    else
                    {

                        <span class="badge bg-success">Active</span>
                    }
                </td>
                <td>@item.CreatedAt.ToShortDateString()</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning"><i class="fas fa-user-cog"></i></a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info"><i class="fas fa-info-circle"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>

<partial name="_Pagination" model="Model" />