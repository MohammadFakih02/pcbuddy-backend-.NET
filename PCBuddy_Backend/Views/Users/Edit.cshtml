@using PCBuddy_Backend.Models
@model PCBuddy_Backend.Models.User

@{
    ViewData["Title"] = "Edit User Permissions";
}

<div class="card shadow-sm" style="max-width: 600px; margin: auto;">
    <div class="card-header bg-warning text-dark">
        <h4 class="mb-0">Edit User: @Model.Username</h4>
    </div>
    <div class="card-body">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label class="form-label">Email</label>
                <input type="text" class="form-control" value="@Model.Email" disabled readonly />
                <small class="text-muted">Personal details cannot be changed here.</small>
            </div>

            <div class="mb-3">
                <label asp-for="Role" class="form-label">Role</label>
                <select asp-for="Role" class="form-select" asp-items="Html.GetEnumSelectList<Role>()"></select>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>

            <div class="mb-3 form-check form-switch">
                <input class="form-check-input" type="checkbox" asp-for="Banned" />
                <label class="form-check-label fw-bold text-danger" asp-for="Banned">Ban User</label>
                <div class="form-text">Banned users cannot log in to the API.</div>
            </div>

            <div class="d-flex justify-content-end gap-2 mt-4">
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                <input type="submit" value="Save Changes" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}