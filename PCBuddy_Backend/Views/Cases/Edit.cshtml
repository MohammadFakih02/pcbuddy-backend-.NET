@model PCBuddy_Backend.Models.Case
@{
    ViewData["Title"] = "Edit Case";
}

<div class="card shadow-sm">
    <div class="card-header bg-warning text-dark"><h4 class="mb-0">Edit Case</h4></div>
    <div class="card-body">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="IsDeleted" />

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Name" class="form-label">Name</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Price" class="form-label">Price ($)</label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="Type" class="form-label">Type</label>
                    <input asp-for="Type" class="form-control" />
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="Color" class="form-label">Color</label>
                    <input asp-for="Color" class="form-control" />
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="SidePanel" class="form-label">Side Panel</label>
                    <input asp-for="SidePanel" class="form-control" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="MotherboardFormFactor" class="form-label">Supported Mobos</label>
                    <input asp-for="MotherboardFormFactor" class="form-control" />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="MaxVideoCardLength" class="form-label">Max GPU Length (mm)</label>
                    <input asp-for="MaxVideoCardLength" class="form-control" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="DriveBays" class="form-label">Drive Bays</label>
                    <input asp-for="DriveBays" class="form-control" />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="FrontPanelUsb" class="form-label">Front Panel USB</label>
                    <input asp-for="FrontPanelUsb" class="form-control" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="ImageUrl" class="form-label">Image URL</label>
                    <input asp-for="ImageUrl" class="form-control" />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="ProductUrl" class="form-label">Product URL</label>
                    <input asp-for="ProductUrl" class="form-control" />
                </div>
            </div>
            <div class="d-flex justify-content-end gap-2">
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                <input type="submit" value="Save Changes" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}