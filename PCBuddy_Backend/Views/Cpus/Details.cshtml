@model PCBuddy_Backend.Models.Cpu

@{
    ViewData["Title"] = "CPU Details";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>@Model.Name</h2>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning"><i class="fas fa-edit"></i> Edit</a>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="row">
                <!-- Image Section -->
                <div class="col-md-4 text-center mb-4 mb-md-0">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded border p-2" style="max-height: 300px;" />
                    }
                    else
                    {
                        <div class="alert alert-secondary py-5">No Image Available</div>
                    }

                    <div class="mt-3">
                        <h3 class="text-success">$@Model.Price</h3>
                        @if (!string.IsNullOrEmpty(Model.ProductUrl))
                        {
                            <a href="@Model.ProductUrl" target="_blank" class="btn btn-outline-primary btn-sm mt-2">
                                <i class="fas fa-external-link-alt"></i> View Product Page
                            </a>
                        }
                    </div>
                </div>

                <!-- Specs Section -->
                <div class="col-md-8">
                    <h5 class="card-title border-bottom pb-2">Specifications</h5>
                    <dl class="row">
                        <dt class="col-sm-4">Manufacturer</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Manufacturer)</dd>

                        <dt class="col-sm-4">Series</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Series)</dd>

                        <dt class="col-sm-4">Socket</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Socket)</dd>

                        <dt class="col-sm-4">Core Count</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.CoreCount)</dd>

                        <dt class="col-sm-4">Base Clock</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.PerformanceCoreClock) GHz</dd>

                        <dt class="col-sm-4">Boost Clock</dt>
                        <dd class="col-sm-8">@(Model.PerformanceCoreBoostClock != null ? Model.PerformanceCoreBoostClock + " GHz" : "-")</dd>

                        <dt class="col-sm-4">TDP</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Tdp) W</dd>

                        <dt class="col-sm-4">Integrated Graphics</dt>
                        <dd class="col-sm-8">@(string.IsNullOrEmpty(Model.IntegratedGraphics) ? "None" : Model.IntegratedGraphics)</dd>

                        <dt class="col-sm-4">Max Memory</dt>
                        <dd class="col-sm-8">@(Model.MaxSupportedMemory != null ? Model.MaxSupportedMemory + " GB" : "-")</dd>

                        <dt class="col-sm-4">L2 Cache</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.L2Cache)</dd>

                        <dt class="col-sm-4">L3 Cache</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.L3Cache)</dd>

                        <dt class="col-sm-4">Last Updated</dt>
                        <dd class="col-sm-8 text-muted">@Model.UpdatedAt.ToLocalTime()</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>