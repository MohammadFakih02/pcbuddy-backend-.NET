@model PCBuddy_Backend.Models.Cpu

@{
    ViewData["Title"] = "Edit CPU";
}

<div class="card shadow-sm">
    <div class="card-header bg-warning text-dark">
        <h4 class="mb-0">Edit CPU</h4>
    </div>
    <div class="card-body">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="IsDeleted" />

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Name" class="form-label">Name</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Price" class="form-label">Price ($)</label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="CoreCount" class="form-label">Core Count</label>
                    <input asp-for="CoreCount" class="form-control" />
                    <span asp-validation-for="CoreCount" class="text-danger"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="PerformanceCoreClock" class="form-label">Core Clock (GHz)</label>
                    <input asp-for="PerformanceCoreClock" class="form-control" />
                    <span asp-validation-for="PerformanceCoreClock" class="text-danger"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="Socket" class="form-label">Socket</label>
                    <input asp-for="Socket" class="form-control" />
                    <span asp-validation-for="Socket" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="ImageUrl" class="form-label">Image URL</label>
                <input asp-for="ImageUrl" class="form-control" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ProductUrl" class="form-label">Product/Purchase URL</label>
                <input asp-for="ProductUrl" class="form-control" />
                <span asp-validation-for="ProductUrl" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-end gap-2">
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                <input type="submit" value="Save Changes" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}