@model PCBuddy_Backend.Models.Cpu

@{
    ViewData["Title"] = "Delete CPU";
}

<div class="alert alert-danger shadow-sm">
    <h4 class="alert-heading">Are you sure?</h4>
    <p>
        You are about to delete <strong>@Model.Name</strong>. 
        This will perform a "Soft Delete", meaning it will be hidden from users 
        but kept in the database for integrity.
    </p>
    <hr>
    
    <dl class="row">
        <dt class = "col-sm-2">Name</dt>
        <dd class = "col-sm-10">@Html.DisplayFor(model => model.Name)</dd>
        
        <dt class = "col-sm-2">Price</dt>
        <dd class = "col-sm-10">$@Html.DisplayFor(model => model.Price)</dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        <input type="submit" value="Confirm Delete" class="btn btn-danger" />
    </form>
</div>