@model PCBuddy_Backend.Models.Storage
@{
    ViewData["Title"] = "Delete Storage";
}

<div class="alert alert-danger shadow-sm">
    <h4 class="alert-heading">Are you sure?</h4>
    <p>Deleting <strong>@Model.Name</strong> (Soft Delete).</p>
    <hr>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">Capacity</dt>
        <dd class="col-sm-10">@Model.Capacity GB</dd>
        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">$@Model.Price</dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        <input type="submit" value="Confirm Delete" class="btn btn-danger" />
    </form>
</div>