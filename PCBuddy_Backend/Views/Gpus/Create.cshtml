@model PCBuddy_Backend.Models.Gpu

@{
    ViewData["Title"] = "Create GPU";
}

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
        <h4 class="mb-0">Add New GPU</h4>
    </div>
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Name" class="form-label">Name</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Price" class="form-label">Price ($)</label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="Chipset" class="form-label">Chipset</label>
                    <input asp-for="Chipset" class="form-control" />
                    <span asp-validation-for="Chipset" class="text-danger"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="Memory" class="form-label">VRAM (GB)</label>
                    <input asp-for="Memory" class="form-control" />
                    <span asp-validation-for="Memory" class="text-danger"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="Tdp" class="form-label">TDP (W)</label>
                    <input asp-for="Tdp" class="form-control" />
                    <span asp-validation-for="Tdp" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="ImageUrl" class="form-label">Image URL</label>
                    <input asp-for="ImageUrl" class="form-control" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="ProductUrl" class="form-label">Product/Purchase URL</label>
                    <input asp-for="ProductUrl" class="form-control" />
                    <span asp-validation-for="ProductUrl" class="text-danger"></span>
                </div>
            </div>

            <div class="d-flex justify-content-end gap-2">
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}