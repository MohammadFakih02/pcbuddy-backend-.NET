@using PCBuddy_Backend.Utils
@model PCBuddy_Backend.Models.Motherboard
@{
    ViewData["Title"] = "Motherboard Details";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>@Model.Name</h2>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning"><i class="fas fa-edit"></i> Edit</a>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="row">
                <div class="col-md-4 text-center mb-4 mb-md-0">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@AIUtils.FormatImageUrl(Model.ImageUrl)" alt="@Model.Name" class="img-fluid rounded border p-2" style="max-height: 300px;" />
                    }
                    else
                    {

                        <div class="alert alert-secondary py-5">No Image Available</div>
                    }

                    <div class="mt-3">
                        <h3 class="text-success">$@Model.Price</h3>
                        @if (!string.IsNullOrEmpty(Model.ProductUrl))
                        {
                            <a href="@Model.ProductUrl" target="_blank" class="btn btn-outline-primary btn-sm mt-2"><i class="fas fa-external-link-alt"></i> View Product</a>
                        }
                    </div>
                </div>
                <div class="col-md-8">
                    <h5 class="card-title border-bottom pb-2">Specifications</h5>
                    <dl class="row">
                        <dt class="col-sm-4">Manufacturer</dt>
                        <dd class="col-sm-8">@Model.Manufacturer</dd>
                        <dt class="col-sm-4">Socket</dt>
                        <dd class="col-sm-8">@Model.Socket</dd>
                        <dt class="col-sm-4">Chipset</dt>
                        <dd class="col-sm-8">@Model.Chipset</dd>
                        <dt class="col-sm-4">Form Factor</dt>
                        <dd class="col-sm-8">@Model.FormFactor</dd>
                        <dt class="col-sm-4">Memory</dt>
                        <dd class="col-sm-8">@Model.MemorySlots slots, Max @Model.MemoryMax GB (@Model.MemoryType)</dd>
                        <dt class="col-sm-4">M.2 Slots</dt>
                        <dd class="col-sm-8">@Model.M2Slots</dd>
                        <dt class="col-sm-4">PCIe x16 Slots</dt>
                        <dd class="col-sm-8">@Model.PcieX16Slots</dd>
                        <dt class="col-sm-4">SATA 6Gb/s</dt>
                        <dd class="col-sm-8">@Model.Sata6Gbps</dd>
                        <dt class="col-sm-4">Wireless</dt>
                        <dd class="col-sm-8">@Model.WirelessNetworking</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>